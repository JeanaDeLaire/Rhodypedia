{{#each sites as |site|}}

  <section data-id={{id}}>
    <div id="content" class="content">
      <div class="blogs">
        <h2>{{name}}</h2>
        <p><span>Site ID:</span> {{id}} | <span>Keywords:</span> {{keywords}}</p>
        <p class="blog-details">Details: {{description}}</p>
        <!-- <p class="blog-comments">{{comments}}</p> -->
        <section data-id={{user_id}}>
        {{#unless (limit user_id)}}
        <p class="limit">
          <button class="btn btn-default" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Add to this post</button>
          <button type="submit" class="btn btn-default delete-site">Remove this post</button>
        </p>
        {{/unless}}
      </section>
        <div class="row">
          <div class="col">
            <div class="collapse multi-collapse" id="multiCollapseExample1">
              <div class="card card-body">
                <form class="append-content">
                  <div class="form-group">
                    <label for="exampleInputPassword1">Description</label>
                    <!-- <textarea name="site[description]" id="description" class="form-control" rows="8"></textarea> -->
                    <textarea name="site[description]" class="form-control" rows="8"></textarea>
                  </div>
                  <div class="form-content">
                    <input type="submit" value="Add to this post" class="btn btn-light append-button"></div>
                  <p id="add-site-message"></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

{{/each}}
